@page
@model UserInfoModel
<div>
    <form method="post">
        <input asp-for="Id"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table">
            <tbody>
            <tr>
                <td><label asp-for="UserName" class="control-label"></label></td>
                <td><input asp-for="UserName" class="form-control"/><span asp-validation-for="UserName" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Email" class="control-label"></label></td>
                <td><input asp-for="Email" class="form-control"/><span asp-validation-for="Email" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Password" class="control-label"></label></td>
                <td>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="PasswordCheck" class="control-label"></label></td>
                <td><input asp-for="PasswordCheck" class="form-control"/></td>
            </tr>
            <tr>
                <td><label asp-for="IsAdministrator" class="control-label"></label></td>
                <td><input asp-for="IsAdministrator" class="form-control"/></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" Value="Save"/> 
                    <a asp-action="/UserInfo">New</a>
                </td>
            </tr>
            </tbody>
        </table>
    </form>
</div>