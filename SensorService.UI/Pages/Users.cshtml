@page
@model UsersModel
<div>
    <div>
        <h2>Users</h2> 
        <form>
            <button type="submit" asp-page="/UserInfo" id="new" name="name" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-plus"></span> New
            </button>
        </form>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">User name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Administrator</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td><a asp-page="/UserInfo" asp-route-id="@user.Id">@user.UserName</a></td>
                    <td>@user.Email</td>
                    <td>@user.IsAdministrator</td>
                </tr>
            }
        </tbody>
    </table>
</div>
