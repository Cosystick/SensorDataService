@page
@model LoginPageModel
@{
    ViewData["Title"] = "Home page";
}

<div class="form-group-sm">
    <form method="post">
        <div class="row">
            <div class="col-sm-6"><h2>Login</h2></div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label asp-for="UserName" class="control-label">User name:</label><input asp-for="UserName" class="form-control" type="text"/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label asp-for="Password" class="control-label">Password:</label><input asp-for="Password" class="form-control" type="password"/>
            </div>
        </div>
        <div class="row"></div>
        <div class="row">
            <div class="col-sm-2 col-sm-offset-4" style="padding-top:10px">
                <input type="submit" class="btn-default form-control" value="Login"/>
            </div>
        </div>
    </form>
    @if (!string.IsNullOrEmpty(Model.Error))
    {
    <div class="alert alert-danger" role="alert">@Model.Error</div>
    }
</div>
